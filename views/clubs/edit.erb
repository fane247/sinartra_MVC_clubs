<h1>Edit a Club</h1>

<form class= "club-container" action="/clubs/<%= @club.id%>" method="POST">

	<input type="hidden" name="_method" value="PUT">
	<label for="name">Name:</label>	
	<br>
	<input type="text" name="name" value="<%= @club.name%>">
	<br>
	<br>
	<label for="description">Description:</label>
	<br>
	<textarea name="description"><%= @club.description%></textarea>
	<br>
	<br>
	<!-- should i make this a sliding scale? or radio button? -->
	<label for="rating">Rating:</label>
	<br>
	<input type="text" name="rating" value="<%= @club.rating %>">
	<br>
	<label for="location">Location</label>
	<br>
	<br>
	<input type="text" name="location" value="<%= @club.location%>">
	<br>
	<input class="button" type="submit" value="Edit"></input>




</form>